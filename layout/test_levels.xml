<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLevelsBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/blackboard"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/btn_white"
                android:text="@string/btn_back"
                android:textColor="@color/colorWhite90"
                android:textSize="18sp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnTest01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_white"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="@string/btn_subject_01"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnTest02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_white"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="@string/btn_subject_02"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite80"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnTest03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_white"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="@string/btn_subject_03"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite80"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>